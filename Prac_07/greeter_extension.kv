
BoxLayout:
    orientation:'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: clear_button
            text: 'Clear'
            on_press: app.clear_all()
        TextInput:
            id: name_input
            text: 'Please type your name here.'

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Print'
            id: greet_button
            on_press: app.greet()
        Label:
            id: name_output
            color: (1, 1, 0, 1)